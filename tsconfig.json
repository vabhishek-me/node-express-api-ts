{
  "compilerOptions": {
    "noUnusedLocals": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "target": "es6",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}